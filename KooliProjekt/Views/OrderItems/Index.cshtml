@* @model IEnumerable<KooliProjekt.Data.OrderItem> *@
@model OrderItemIndexModel


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form method="get">
    <div class="form-group">
        <label class="control-label">Order Search</label>
        <input asp-for="Search.OrderSearch" class="form-control" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Search</button>
        <a asp-controller="OrderItems" asp-action="Index" class="btn btn-primary">Reset</a>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data.Results[0].Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.Results[0].PriceAtOrderTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.Results[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.Results[0].Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceAtOrderTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
